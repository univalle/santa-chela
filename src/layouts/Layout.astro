---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Santa Chela Bar - El mejor ambiente y las mejores bebidas"
		/>
		<meta name="viewport" content="width=device-width" />
		<link
			rel="icon"
			type="image/png"
			href="https://imgfz.com/i/jwadVGc.png"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--yellow: #fcb040;
		--black: #000000;
		--brown: #0a0a0e;
		--red: #a00e23;
		--gray: #7b8484;
		--white : #ddd4dd;
		--bg-gradient: linear-gradient(135deg, #0a0a0e 0%, #130910 100%);
	}

	@font-face {
		font-family: "Marker";
		src: url("/fonts/marker.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
	}

	@font-face {
		font-family: "Bebas";
		src: url("/fonts/bebas2.ttf") format("truetype");
		font-weight: normal;
		font-style: normal;
	}



	html {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		background: var(--bg-gradient);
		color: white;
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		padding: 0;
	}
	h1,
	h2,
	h3,
	h4 {
		font-family: "Bebas", sans-serif;
		margin: 0;
		font-weight: 100;
	}

	.section-title {
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 4rem;
		gap: 2rem;
	}

	.ornament {
		width: 100px;
		height: 2px;
		background: linear-gradient(
			to var(--direction, right),
			transparent,
			var(--yellow)
		);
		position: relative;
	}

	.ornament::before,
	.ornament::after {
		content: "";
		position: absolute;
		width: 10px;
		height: 10px;
		border: 2px solid var(--yellow);
		transform: rotate(45deg);
	}

	.ornament.left {
		--direction: right;
	}

	.ornament.right {
		--direction: left;
	}
</style>
