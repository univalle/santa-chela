---
const products = [
	{
		category: "Cervezas Artesanales",
		items: [
			{
				name: "IPA Loca",
				price: "15.000",
				rating: 4.8,
				image: "http://imgfz.com/i/NHBR0zO.png",
			},
			{
				name: "Stout Negra Noche",
				price: "16.000",
				rating: 4.7,
				image: "http://imgfz.com/i/F3ylRCA.png",
			},
			{
				name: "Rubia Dorada",
				price: "14.000",
				rating: 4.6,
				image: "http://imgfz.com/i/uKlSEf4.png",
			},
		],
	},
	{
		category: "Cócteles Signature",
		items: [
			{
				name: "Secreto de Santa",
				price: "25.000",
				rating: 4.9,
				image: "http://imgfz.com/i/jQofsAJ.png",
			},
			{
				name: "Mula de Mezcal",
				price: "22.000",
				rating: 4.8,
				image: "http://imgfz.com/i/LOduZfe.png",
			},
			{
				name: "Amanecer Chelero",
				price: "23.000",
				rating: 4.7,
				image: "http://imgfz.com/i/a7pgOGx.jpeg",
			},
		],
	},
];
---


<section id="products" class="products">
	<h2>Nuestra selección</h2>

	<div class="products-grid">
		{products.map((category) => (
			<div class="category">
				<h3>{category.category}</h3>
				<div class="items">
					{category.items.map((item) => (
						<div class="item">
							<div class="item-image-container">
								<img
									src={item.image}
									alt={item.name}
									class="item-image"
								/>
	
							</div>
							<div class="item-content">
								<h4>{item.name}</h4>
								<span class="price">$ {item.price}</span>
								<div class="">
									<div class="rating">
										{"★".repeat(Math.floor(item.rating))}
									</div>
								</div>
							</div>
							
						</div>
					))}
				</div>
			</div>
		))}
	</div>

	
</section>


<style>
.products {
	padding: 6rem 2rem;
}
h2 {
	color: var(--yellow);
	font-size: 3rem;
	text-align: center;
	margin-bottom: 4rem;
	text-shadow:
		3px 3px 0px rgba(255, 0, 0, 0.8),
		7px 7px 10px rgba(0, 0, 0, 0.7);
}

.products-grid {
	font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	max-width: 1200px;
	margin: 0 auto;
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 3rem;
}

.category h3 {
	color: var(--white);
	font-size: 2rem;
	margin-bottom: 2rem;
	text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.4);
}

h3 {
	font-family: 'Marker';
}

.item {
	background: rgb(0, 0, 0);
	border-radius: 16px;
	margin-bottom: 2rem;
	overflow: hidden;
	transition: all 0.3s ease;
	box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
	position: relative; /* Mantener el texto sobre la imagen */

}

.item:hover .item-image {
	transform: scale(1.1); /* Solo se hace zoom en la imagen */
}

.item-image-container {
	position: relative;
	overflow: hidden;
	aspect-ratio: 16/9;
}

.item-image {
	width: 100%;
	height: 100%;
	object-fit: cover;
	opacity: 0.5;
	transition: transform 0.3s ease;
}

.item-overlay {
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	padding: 1rem;
	background: linear-gradient(transparent, rgba(0, 0, 0, 0.5)); /* Gradiente sutil */
	opacity: 0;
	transition: opacity 0.3s ease;
}

.item:hover .item-overlay {
	opacity: 1;
}

.item-content {
	position: absolute; /* Fijar el contenido sobre la imagen */
	bottom: 0; /* Fijar en la parte inferior */
	left: 0;
	right: 0;
	padding: 1.5rem;
	color: var(--white);
	background: linear-gradient(transparent, rgba(0, 0, 0, 0.4)); /* Gradiente sutil */
	text-align: center;
}



.item-content h4 {
	font-family: 'Marker';
	font-size: 1.6rem;
	margin-bottom: 0.5rem;
	color: var(--white);
	text-decoration: none; /* Eliminar subrayado */
}


.price {
	font-family: 'Marker';
	font-size: 2rem;
	font-weight: bold;
	color: var(--white);
}

.rating {
	color: var(--yellow);
	font-size: 2rem;
	padding: 0.5rem;
	border-radius: 8px;
	display: inline-block;
}

.rating-number {
	color: var(--white);
	font-size: 20px;
	text-align: center;
}

.promotions {
	margin-top: 8rem;
}

.promotions h3 {
	color: var(--yellow);
	font-size: 3rem;
	text-align: center;
	margin-bottom: 3rem;
}

.promo-cards {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 2rem;
	max-width: 1200px;
	margin: 0 auto;
}

.promo-card {
	background: linear-gradient(135deg, var(--red) 0%, #6d0919 100%);
	padding: 2.5rem;
	border-radius: 16px;
	position: relative;
	overflow: hidden;
	transition: transform 0.3s ease;
	box-shadow: 0 4px 25px rgba(0, 0, 0, 0.3);
}

.promo-card:hover {
	transform: translateY(-5px);
}

.promo-content h4 {
	color: var(--yellow);
	font-size: 2rem;
	margin-bottom: 1rem;
}

.promo-content p {
	margin: 0.5rem 0;
	font-size: 1.3rem;
	color: white;
}

.promo-badge {
	position: absolute;
	top: -25px;
	right: -25px;
	background: var(--yellow);
	color: var(--brown);
	padding: 2.5rem;
	border-radius: 50%;
	transform: rotate(15deg);
	font-weight: bold;
	font-size: 1.5rem;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 80px;
	height: 80px;
	box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}


h4 {
	font-family: 'Black';
}



</style>
