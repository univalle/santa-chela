<style>
	.social-share {
		padding: 2rem;
		text-align: center;
		background: var(--black);
	}

	h2 {
	color: var(--yellow);
	font-size: 4rem;
	text-align: center;
	margin-bottom: 4rem;
	text-shadow:
		3px 3px 0px rgba(255, 0, 0, 0.8),
		7px 7px 10px rgba(0, 0, 0, 0.7);
}

	.social-buttons {
		display: flex;
		gap: 2rem;
		justify-content: center;
	}

	.social-button {
		color: white;
		padding: 1rem;
		border-radius: 50%;
		transition: transform 0.3s ease, background-color 0.3s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.facebook {
		background: #1877f2;
	}

	.twitter {
		background: #1da1f2;
	}

	.instagram {
		background: #e4405f;
	}

	.social-button:hover {
		transform: translateY(-3px);
		opacity: 0.9;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		border: 0;
	}
</style>